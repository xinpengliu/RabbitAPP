<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="tab_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">15dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:onClick">tabClick</item>
        <item name="android:clickable">true</item>
    </style>
    
    
    <style name="tab_style_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">20dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">20dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:onClick">tabClick</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="tab_style_add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:onClick">tabClick</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
