<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="240dip"
        android:layout_height="140dip"
        android:background="#2894FF"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerVertical="true"
            android:background="@drawable/photo_demo" />

        <TextView
            android:id="@+id/text_profile"
            style="@style/tab_style_profile"
            android:layout_toRightOf="@+id/image_photo"
            android:text="宝贝名称" />
        <TextView
            android:id="@+id/text_add"
            style="@style/tab_style_add"
            android:layout_below="@+id/text_profile"
            android:layout_toRightOf="@+id/image_photo"
            android:text="增加新宝贝" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="240dip"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="240dip"
            android:layout_height="match_parent"
            android:background="#2894FF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_weizhi"
                style="@style/tab_style"
                android:drawableLeft="@drawable/tab_local"
                android:text="位置" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider" />

            <TextView
                style="@style/tab_style"
                android:drawableLeft="@drawable/tab_ugc"
                android:text="蓝牙牵手" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider" />

            <TextView
                style="@style/tab_style"
                android:drawableLeft="@drawable/tab_ties"
                android:text="做任务" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider" />

            <TextView
                style="@style/tab_style"
                android:drawableLeft="@drawable/tab_pics"
                android:text="健康管理" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider" />

            <TextView
                style="@style/tab_style"
                android:drawableLeft="@drawable/tab_focus"
                android:text="围栏警告" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider" />

            <TextView
                style="@style/tab_style"
                android:drawableLeft="@drawable/tab_vote"
                android:text="闹钟" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider" />

            <TextView
                style="@style/tab_style"
                android:drawableLeft="@drawable/tab_read"
                android:text="使用设置" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>